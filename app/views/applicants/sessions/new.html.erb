<div class='inner'>
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class='inline'>
      <p><%= f.email_field :email, :placeholder => :Email %></p>
      <p><%= f.password_field :password, :placeholder => :Password %>
        <% if devise_mapping.rememberable? -%>

          <%= f.label :remember_me, :class => :checkbox do %>Remember Me <%= f.check_box :remember_me %><%- end -%>
        <% end -%>
      </p>
    </div>

    <p id='submit'><%= f.submit "Sign in", :class => 'btn' %></p>
    <%= render :partial => "applicants/shared/links" %>
  <% end %>
</div>
